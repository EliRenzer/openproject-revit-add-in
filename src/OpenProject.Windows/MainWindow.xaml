<Window
  x:Class="OpenProject.Windows.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:ctr="clr-namespace:OpenProject.UserControls;assembly=OpenProject"
  xmlns:data="clr-namespace:OpenProject.Data;assembly=OpenProject"
  Name="mainWin"
  Title="BCFier for Windows"
  Width="700"
  Height="700"
  Closing="Window_Closing"
  Icon="Assets/icon.ico"
  Loaded="MainWindow_OnLoaded">
  <Window.CommandBindings>

    <CommandBinding Command="data:Commands.AddView" Executed="OnAddView" />
  </Window.CommandBindings>
  <Grid>
    <ctr:BcfierPanel
      Name="Bcfier"
      HorizontalAlignment="Stretch"
      HorizontalContentAlignment="Stretch" />
  </Grid>
</Window>
